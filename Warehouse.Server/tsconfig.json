{
	"compileOnSave": true,
	"watchOptions": {
		"watchDirectory": "wwwroot/ts"
	},
	"compilerOptions": {
		"target": "ES6",
		"allowImportingTsExtensions": true,
		"module": "ES6",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "wwwroot/js"
	}
}
