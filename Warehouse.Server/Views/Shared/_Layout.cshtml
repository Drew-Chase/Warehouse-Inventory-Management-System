@using Warehouse.Data;
@using Warehouse.Data.Constants

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (ViewData["title"] is string title && !string.IsNullOrWhiteSpace(title))
    {
        <title>@title - @ApplicationData.ApplicationName</title>
    }
    else
    {
        <title>@ApplicationData.ApplicationName</title>
    }
    <link rel="icon" type="image/png" href="/images/icon.svg"/>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/input.css">
    <link rel="stylesheet" href="/css/scrollbar.css">
    <link rel="stylesheet" href="/css/calendar.css">
    <link id="color-theme" rel="stylesheet" href="/css/dark.css">
    <link rel="stylesheet" href="https://use.typekit.net/clr8liy.css">
    <script src="https://kit.fontawesome.com/7f83c16cce.js" defer crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" defer integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/js/theme-switcher.min.js" type="module"></script>
    <script src="/js/labels.min.js" type="module"></script>
    <script src="/js/inputs.min.js" type="module"></script>
    <script src="/js/calendar.min.js" type="module"></script>
</head>
<body>
@RenderBody()
</body>
</html>